<?xml version="1.0" encoding="utf-8"?>

<Levels>

  <!--
  TileColor tokens B = blue R = Red Y = Yellow  P = Purple O = Orange G = Green K = Black
  TileModifers Tokens No = None BS = Bigger spread SS = Smaller Spread, MB = More Bombs, LB = less bombs
  -->
  
  <Level LevelID ="0">

    <Modifers>
      <Spread> 1 </Spread>
      <Bombs>  0 </Bombs>
      
      <StartTiles>
        <Blue>   2 </Blue>
        <Red>    2 </Red>
        <Yellow> 2 </Yellow>
      </StartTiles>
    </Modifers>

    <TileMap>
      <TileMapStart>
        <Row> W,W,W,W,W, </Row>
        <Row> W,W,W,W,W, </Row>
        <Row> W,W,W,W,W  </Row>                
      </TileMapStart>

      <TileMapModifers>
        <Row> No,No,No,No,No,</Row>
        <Row> No,No,No,No,No,</Row>
        <Row> No,No,No,No,No</Row>
      </TileMapModifers>

      <TileMapEnd>
        <Row> Y,O,R,P,B, </Row>
        <Row> Y,W,R,W,B, </Row>
        <Row> Y,O,R,P,B  </Row>
      </TileMapEnd>
    
    </TileMap>  
   </Level>

